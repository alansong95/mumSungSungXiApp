<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wootae.mumsungsungxi.MainActivity">

    <ImageView
        android:id="@+id/main_activity_imageview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/cardview_light_background"/>

    <GridLayout
        android:layout_below="@id/main_activity_imageview"
        android:id="@+id/main_activity_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4">

            <com.wootae.mumsungsungxi.GridItemView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.wootae.mumsungsungxi.GridItemView>

        <com.wootae.mumsungsungxi.GridItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.wootae.mumsungsungxi.GridItemView>

        <com.wootae.mumsungsungxi.GridItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.wootae.mumsungsungxi.GridItemView>

        <com.wootae.mumsungsungxi.GridItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.wootae.mumsungsungxi.GridItemView>

        <com.wootae.mumsungsungxi.GridItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.wootae.mumsungsungxi.GridItemView>




    </GridLayout>

</RelativeLayout>
